<%- include ../partials/header.ejs %>

<%- include ../partials/mainNav.ejs %>

<!---Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
          <h1><%= title %></h1>
          <br>
           <form class="form" method="POST">
                <div class="form-group">
                    <lable for="nameTextField"> Contact Name</lable>
                    
                    <input type="text" class="form-control" 
                    id="nameTextField"
                    placeholder="Enter the Contact Name"
                    name="name" 
                    value="<%=book.name%>"
                    required>
                </div>
                    

                <div class="form-group">
                    <lable for="numberTextField"> Contact Number</lable>
                    <input type="text" class="form-control" 
                    id="numberTextField"
                    placeholder="Enter the Contact Number"
                    name="number" 
                    value="<%=book.number%>"
                    required>
                </div>

                <div class="form-group">
                    <lable for="emailTextField"> Email Address</lable>
                    <input type="text" class="form-control" 
                    id="emailTextField"
                    placeholder="Enter the Email Address"
                    name="email" 
                    value="<%=book.email%>"
                    required>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit</button>

                    <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i>Cancle</a>
           </form>
        </div>

    </div>
</div>






