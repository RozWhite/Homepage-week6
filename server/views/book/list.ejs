<%- include ../partials/header.ejs %>

<%- include ../partials/mainNav.ejs %>

  

  <!-- Main Content -->
  
     <main class="container">
      <div class="row">
        <div class="col-m1-offset-3 col-md-8">
          <h1><%= title %></h1>
           <a href="/book-list/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i>Add a Contact
          </a>
          <br>
          <table class="table table-bordered table-striped table-hover">
            <!---Header Row-->
            <tr>
              <th class="text-center ">Contact Name</th>
              <th class="text-center col-1">Contact Number</th>
              <th class="text-center col-2">Email Address</th>
              <th class="text-center col-1"></th>
              <th class="text-center col-1"></th>


            </tr>
            <!--Repeatable Template Row-->
            <% for(let count=0; count<BookList.length; count++){%>
              <tr>
                <td class="text-center"><%=BookList[count].name %></td>
                <td class="text-center col-1"><%=BookList[count].number %></td>
                <td class="text-center col-2"><%=BookList[count].email %></td>
                <td class="text-center col-1">
                  <a href="/book-list/edit/<%=BookList[count]._id%>" class="btn btn-primary btn-sm">
                  <i class="fas fa-pencil-alt"></i>Update</a>
                </td>
                <td class="text-center col-1">
                  <a href="/book-list/delete/<%=BookList[count]._id%>" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash-alt"></i>Delete</a>

                </td>
              </tr>
            <% } %> 
          </table>
         

          

          
        </div>
      </div>
     </main>
  



<%- include ../partials/bottomNav.ejs %>
<%- include ../partials/footer.ejs %>





